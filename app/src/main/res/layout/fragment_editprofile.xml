<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.sparecode.yaaroz.view.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:drawablePadding="@dimen/dp_10"
            android:drawableStart="@drawable/bluedot"
            android:gravity="center"
            android:padding="@dimen/dp_5"
            android:text="Picture"
            android:textColor="#0074E4"
            android:textSize="@dimen/sp_18"
            app:customFont="Roboto-Regular.ttf" />

        <ImageView
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp_5"
            android:scaleType="centerCrop"
            android:src="@drawable/profile_pic" />

        <com.sparecode.yaaroz.view.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:drawablePadding="@dimen/dp_10"
            android:drawableStart="@drawable/bluedot"
            android:gravity="center"
            android:padding="@dimen/dp_5"
            android:text="Name"
            android:textColor="#0074E4"
            android:textSize="@dimen/sp_18"
            app:customFont="Roboto-Regular.ttf" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.sparecode.yaaroz.view.CustomEditText
                android:id="@+id/customEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_5"
                android:layout_weight="1"
                android:background="@drawable/blueradiusrectangle"
                android:hint="First Name"
                android:padding="@dimen/dp_10"
                android:textColor="#8E8E8E"
                android:textColorHint="#8E8E8E"
                android:textSize="@dimen/sp_16" />

            <com.sparecode.yaaroz.view.CustomEditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_5"
                android:layout_weight="1"
                android:background="@drawable/blueradiusrectangle"
                android:hint="Last Name"
                android:padding="@dimen/dp_10"
                android:textColor="#8E8E8E"
                android:textColorHint="#8E8E8E"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <com.sparecode.yaaroz.view.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:drawablePadding="@dimen/dp_10"
            android:drawableStart="@drawable/bluedot"
            android:gravity="center"
            android:padding="@dimen/dp_5"
            android:text="Email"
            android:textColor="#0074E4"
            android:textSize="@dimen/sp_18"
            app:customFont="Roboto-Regular.ttf" />

        <com.sparecode.yaaroz.view.CustomEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_5"
            android:background="@drawable/blueradiusrectangle"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="@dimen/dp_10"
            android:textColor="#8E8E8E"
            android:textColorHint="#8E8E8E"
            android:textSize="@dimen/sp_16" />

        <com.sparecode.yaaroz.view.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:drawablePadding="@dimen/dp_10"
            android:drawableStart="@drawable/bluedot"
            android:gravity="center"
            android:padding="@dimen/dp_5"
            android:text="Age"
            android:textColor="#0074E4"
            android:textSize="@dimen/sp_18"
            app:customFont="Roboto-Regular.ttf" />

        <com.sparecode.yaaroz.view.seekbar.RangeSeekBar
            android:id="@+id/ageRangeSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_5"
            android:layout_marginStart="@dimen/dp_5" />

        <com.sparecode.yaaroz.view.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:drawablePadding="@dimen/dp_10"
            android:drawableStart="@drawable/bluedot"
            android:gravity="center"
            android:padding="@dimen/dp_5"
            android:text="Gender"
            android:textColor="#0074E4"
            android:textSize="@dimen/sp_18"
            app:customFont="Roboto-Regular.ttf" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_10"
                android:button="@drawable/radiobuttonselector"
                android:paddingLeft="@dimen/dp_15"
                android:text="Male" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:button="@drawable/radiobuttonselector"
                android:paddingLeft="@dimen/dp_15"
                android:text="Female" />
        </RadioGroup>

        <com.sparecode.yaaroz.view.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            android:drawablePadding="@dimen/dp_10"
            android:drawableStart="@drawable/bluedot"
            android:gravity="center"
            android:padding="@dimen/dp_5"
            android:text="Do you smoking?"
            android:textColor="#0074E4"
            android:textSize="@dimen/sp_18"
            app:customFont="Roboto-Regular.ttf" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_10"
                android:button="@drawable/radiobuttonselector"
                android:paddingLeft="@dimen/dp_15"
                android:text="Yes" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:button="@drawable/radiobuttonselector"
                android:paddingLeft="@dimen/dp_15"
                android:text="No" />
        </RadioGroup>

        <com.sparecode.yaaroz.view.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            android:drawablePadding="@dimen/dp_10"
            android:drawableStart="@drawable/bluedot"
            android:gravity="center"
            android:padding="@dimen/dp_5"
            android:text="Do you have pets ?"
            android:textColor="#0074E4"
            android:textSize="@dimen/sp_18"
            app:customFont="Roboto-Regular.ttf" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_10"
                android:button="@drawable/radiobuttonselector"
                android:paddingLeft="@dimen/dp_15"
                android:text="Yes" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:button="@drawable/radiobuttonselector"
                android:paddingLeft="@dimen/dp_15"
                android:text="No" />
        </RadioGroup>

        <com.sparecode.yaaroz.view.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            android:drawablePadding="@dimen/dp_10"
            android:drawableStart="@drawable/bluedot"
            android:gravity="center"
            android:padding="@dimen/dp_5"
            android:text="School"
            android:textColor="#0074E4"
            android:textSize="@dimen/sp_18"
            app:customFont="Roboto-Regular.ttf" />

        <com.sparecode.yaaroz.view.CustomEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:background="@drawable/blueradiusrectangle"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="@dimen/dp_10" />

        <com.sparecode.yaaroz.view.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            android:drawablePadding="@dimen/dp_10"
            android:drawableStart="@drawable/bluedot"
            android:gravity="center"
            android:padding="@dimen/dp_5"
            android:text="Profession"
            android:textColor="#0074E4"
            android:textSize="@dimen/sp_18"
            app:customFont="Roboto-Regular.ttf" />

        <com.sparecode.yaaroz.view.CustomEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:background="@drawable/blueradiusrectangle"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="@dimen/dp_10" />

        <com.sparecode.yaaroz.view.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            android:drawablePadding="@dimen/dp_10"
            android:drawableStart="@drawable/bluedot"
            android:gravity="center"
            android:padding="@dimen/dp_5"
            android:text="About Me"
            android:textColor="#0074E4"
            android:textSize="@dimen/sp_18"
            app:customFont="Roboto-Regular.ttf" />

        <com.sparecode.yaaroz.view.CustomEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:background="@drawable/blueradiusrectangle"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="@dimen/dp_10" />

        <com.sparecode.yaaroz.view.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center"
            android:padding="@dimen/dp_5"
            android:text="Complete Full Profile"
            android:textColor="#0074E4"
            android:textSize="@dimen/sp_18"
            app:customFont="Roboto-Regular.ttf" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/down_icon" />

        <com.sparecode.yaaroz.view.CustomButton
            android:layout_width="263dp"
            android:layout_height="35dp"
            android:layout_margin="@dimen/dp_20"
            android:layout_gravity="center"
            android:background="@drawable/bluerectanglebox"
            android:padding="@dimen/dp_5"
            android:text="Save"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />
    </LinearLayout>
</ScrollView>