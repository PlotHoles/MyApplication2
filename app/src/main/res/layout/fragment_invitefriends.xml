<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_60"
        android:layout_marginLeft="@dimen/dp_60"

        >
        <sparecode.com.yaaroz.view.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SMS"
            android:background="@drawable/switch_shape"
            android:textSize="@dimen/sp_17"
            android:textColor="@color/txt_changecolor"
            android:layout_marginTop="@dimen/dp_8"
            android:padding="@dimen/dp_8"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/txtSMS"
            app:customFont="Roboto-Regular.ttf"
            />
        <sparecode.com.yaaroz.view.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:background="@drawable/switch_shape"
            android:textSize="@dimen/sp_17"
            android:textColor="@color/txt_changecolor"
            android:layout_marginTop="@dimen/dp_8"
            android:padding="@dimen/dp_8"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/txtEmail"
            app:customFont="Roboto-Regular.ttf"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_20"
        >

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Type Phone Number"
            android:background="@color/veryLightGrayInMatches"
            android:padding="@dimen/dp_10"
            android:layout_weight="1"
            android:inputType="phone"
            android:textSize="@dimen/sp_17"
            android:id="@+id/EdittxtNum"

            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/contcet_icon"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:id="@+id/imgContact"
            />


    </LinearLayout>



        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_150"
            android:hint="Write"
            android:background="@color/veryLightGrayInMatches"
            android:padding="@dimen/dp_10"
            android:gravity="top"
            android:layout_marginRight="@dimen/dp_50"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_20"
            android:id="@+id/edittxtWriteDetail"
            android:textSize="@dimen/sp_17"
            />


    <sparecode.com.yaaroz.view.CustomButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_60"
        android:layout_marginLeft="@dimen/dp_60"
        android:layout_marginTop="@dimen/dp_20"
        android:text="Invite"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_17"
        android:background="@color/inSettingDarkblue"
        android:id="@+id/btnInvite"

        />

</LinearLayout>