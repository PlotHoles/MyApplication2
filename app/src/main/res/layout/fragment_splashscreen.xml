<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:pv="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgSplashLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:src="@drawable/yaaroz_logo" />
    <com.sparecode.yaaroz.utils.ParticleView
        android:id="@+id/pv_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/splash_bg"
        pv:pv_text_color="@color/colorPrimary"
        pv:pv_host_text="Yaaroz"
        pv:pv_particle_text=".com"
        pv:pv_particle_text_size="@dimen/sp_21"
        pv:pv_text_anim_time="1500"
        pv:pv_spread_anim_time="1000"
        pv:pv_host_text_anim_time="1500"
        />
</FrameLayout>