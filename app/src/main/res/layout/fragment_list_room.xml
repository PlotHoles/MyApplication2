<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    >
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



        <sparecode.com.yaaroz.view.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="List a Room"
            android:textColor="@color/inSettingDarkblue"
            android:textSize="@dimen/sp_17"
            android:layout_marginLeft="@dimen/dp_15"
            app:customFont="Roboto-Regular.ttf"
            android:layout_marginTop="@dimen/dp_5"
            />

        <sparecode.com.yaaroz.view.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/shape_bluedot"
            android:text="Select City"
            app:customFont="Roboto-Regular.ttf"
            android:id="@+id/txtSelectCity"
            android:padding="@dimen/dp_5"
            android:textSize="17sp"
            android:textColor="@color/inSettingDarkblue"
            android:drawablePadding="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_10"

            />

        <Spinner
                    android:id="@+id/spinnerSelectCity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@drawable/spinner_selectroommatchegender"
                    android:spinnerMode="dropdown"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_weight="1"
                    android:padding="@dimen/dp_10"
                    android:entries="@array/stringselectcity"
            />

        <sparecode.com.yaaroz.view.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/shape_bluedot"
            android:text="Address"
            app:customFont="Roboto-Regular.ttf"
            android:id="@+id/txtAddress"
            android:padding="@dimen/dp_5"
            android:textSize="17sp"
            android:textColor="@color/inSettingDarkblue"
            android:drawablePadding="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_10"

            />

        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address"
            android:background="@drawable/shape_rectangleblack"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:padding="@dimen/dp_10"
            android:id="@+id/AutoCompletetxtAddress"
            />


        <sparecode.com.yaaroz.view.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/shape_bluedot"
            android:text="Photo ( 0 )"
            app:customFont="Roboto-Regular.ttf"
            android:id="@+id/txtPhoto"
            android:padding="@dimen/dp_5"
            android:textSize="17sp"
            android:textColor="@color/inSettingDarkblue"
            android:drawablePadding="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_10"

            />

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                </LinearLayout>
        </HorizontalScrollView>
        <sparecode.com.yaaroz.view.CustomButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Add"
            android:background="@drawable/shape_rectangleblack"
            android:layout_marginLeft="@dimen/dp_15"
            android:padding="@dimen/dp_10"
            android:gravity="left|center"
            android:id="@+id/CustomBtnAdd"
                />

        <sparecode.com.yaaroz.view.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/shape_bluedot"
            android:text="Room Description"
            app:customFont="Roboto-Regular.ttf"
            android:id="@+id/txtDescription"
            android:padding="@dimen/dp_5"
            android:textSize="17sp"
            android:textColor="@color/inSettingDarkblue"
            android:drawablePadding="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_10"

            />

        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Add More Details Here"
            android:background="@drawable/shape_rectangleblack"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:padding="@dimen/dp_10"
            />

        <sparecode.com.yaaroz.view.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/shape_bluedot"
            android:text="Rent Per Month"
            app:customFont="Roboto-Regular.ttf"
            android:id="@+id/txtRent"
            android:padding="@dimen/dp_5"
            android:textSize="17sp"
            android:textColor="@color/inSettingDarkblue"
            android:drawablePadding="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_10"

            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_rectangleblack"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:padding="@dimen/dp_10"
            />

        <sparecode.com.yaaroz.view.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/shape_bluedot"
            android:text="Date Available"
            app:customFont="Roboto-Regular.ttf"
            android:id="@+id/txtDate"
            android:padding="@dimen/dp_5"
            android:textSize="17sp"
            android:textColor="@color/inSettingDarkblue"
            android:drawablePadding="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_10"

            />

        <Spinner
                    android:id="@+id/spinnerDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@drawable/spinner_selectroommatchegender"
                    android:spinnerMode="dropdown"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_weight="1"
                    android:padding="@dimen/dp_10"
                    android:entries="@array/stringdate"

            />

        <sparecode.com.yaaroz.view.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/shape_bluedot"
            android:text="# of Roommates"
            app:customFont="Roboto-Regular.ttf"
            android:id="@+id/txtNumRoommate"
            android:padding="@dimen/dp_5"
            android:textSize="17sp"
            android:textColor="@color/inSettingDarkblue"
            android:drawablePadding="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_10"

            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Roommates"
            android:background="@drawable/shape_rectangleblack"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:padding="@dimen/dp_10"
            />

        <sparecode.com.yaaroz.view.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/shape_bluedot"
            android:text="Gender of current Roommates"
            app:customFont="Roboto-Regular.ttf"
            android:id="@+id/txtGender"
            android:padding="@dimen/dp_5"
            android:textSize="17sp"
            android:textColor="@color/inSettingDarkblue"
            android:drawablePadding="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_10"

            />
        <Spinner
                    android:id="@+id/spinnerGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@drawable/spinner_selectroommatchegender"
                    android:spinnerMode="dropdown"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_weight="1"
                    android:padding="@dimen/dp_10"
                    android:entries="@array/stringcitygender"
            />

        <sparecode.com.yaaroz.view.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/shape_bluedot"
            android:text="Lease Length"
            app:customFont="Roboto-Regular.ttf"
            android:id="@+id/txtLength"
            android:padding="@dimen/dp_5"
            android:textSize="17sp"
            android:textColor="@color/inSettingDarkblue"
            android:drawablePadding="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_10"

            />
        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/LeaseLength"
            android:thumb="@drawable/custom_radiobutton_sel_round_background"
            android:indeterminate="false"
            android:layout_margin="@dimen/dp_20"

            />



</LinearLayout>
</ScrollView>