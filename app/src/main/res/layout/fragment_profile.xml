<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/profileBgLightGray"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/offWhite"
        android:layout_marginTop="@dimen/dp_10"

        >

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/profilelogoboy1"
            android:id="@+id/imgRecentChat"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_3"
            android:layout_marginBottom="@dimen/dp_3"
            android:layout_marginRight="@dimen/dp_15"

            />

        <sparecode.com.yaaroz.view.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ammar_tahir"
            android:layout_gravity="center"
            android:textColor="@color/inSettingDarkblue"
            android:textSize="@dimen/sp_21"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_gravity="center"
            >

            <sparecode.com.yaaroz.view.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="26"
                android:background="@drawable/shape_roundblue"
                android:padding="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_10"
                />
            <sparecode.com.yaaroz.view.CustomTextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/m"
              android:layout_marginRight="@dimen/dp_21"
              />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_30"

        >
        <sparecode.com.yaaroz.view.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email :"
            android:textColor="@color/lightGrayProfile"
            android:textSize="@dimen/sp_21"
            />
        <sparecode.com.yaaroz.view.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ammartahir@gmail.com"
            android:textColor="@color/inSettingDarkblue"
            android:textSize="@dimen/sp_21"
            android:layout_marginLeft="@dimen/dp_5"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_30"
        >
        <sparecode.com.yaaroz.view.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="School :"
            android:textColor="@color/lightGrayProfile"
            android:textSize="@dimen/sp_21"
            />
        <sparecode.com.yaaroz.view.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- - -"
            android:textColor="@color/inSettingDarkblue"
            android:textSize="@dimen/sp_21"
            android:layout_marginLeft="@dimen/dp_5"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_30"
        >
        <sparecode.com.yaaroz.view.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profession :"
            android:textColor="@color/lightGrayProfile"
            android:textSize="@dimen/sp_21"
            />
        <sparecode.com.yaaroz.view.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- - -"
            android:textColor="@color/inSettingDarkblue"
            android:textSize="@dimen/sp_21"
            android:layout_marginLeft="@dimen/dp_5"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_30"
        >
        <sparecode.com.yaaroz.view.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quirks :"
            android:textColor="@color/lightGrayProfile"
            android:textSize="@dimen/sp_21"
            />
        <sparecode.com.yaaroz.view.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Have no Pets &amp; Non-Smoker"
            android:textColor="@color/inSettingDarkblue"
            android:textSize="@dimen/sp_21"
            android:layout_marginLeft="@dimen/dp_5"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_30"
        >
        <sparecode.com.yaaroz.view.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Q&amp;A :"
            android:textColor="@color/lightGrayProfile"
            android:textSize="@dimen/sp_21"
            />
        <sparecode.com.yaaroz.view.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- - -"
            android:textColor="@color/inSettingDarkblue"
            android:textSize="@dimen/sp_21"
            android:layout_marginLeft="@dimen/dp_5"
            />

    </LinearLayout>

</LinearLayout>