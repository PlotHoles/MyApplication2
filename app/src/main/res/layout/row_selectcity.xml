<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frameCity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_5"
    android:background="@drawable/sel_city_box"
    android:clickable="true"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imgSelectCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_2"
        android:scaleType="fitXY"
        android:src="@drawable/canada" />

    <com.sparecode.yaaroz.view.CustomTextView
        android:id="@+id/txtCityName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="@dimen/dp_2"
        android:background="#AA000000"
        android:gravity="center"
        android:padding="@dimen/dp_5"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_18" />

    <ImageButton
        android:id="@+id/imgSelector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/checked_big"
        android:padding="@dimen/dp_5"
        android:visibility="gone" />

</FrameLayout>