<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/bg_image" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:padding="@dimen/dp_42">


        <com.sparecode.yaaroz.view.CustomButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_5"
            android:background="@drawable/bluebox"
            android:drawableLeft="@drawable/home_icon"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_15"
            android:text="Rooms"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_21"
            app:customFont="Roboto-Regular.ttf" />


        <com.sparecode.yaaroz.view.CustomButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_5"
            android:background="@drawable/bluebox"
            android:drawableLeft="@drawable/roommates_icon"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_15"
            android:text="RoomMates"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_21"
            app:customFont="Roboto-Regular.ttf" />

        <com.sparecode.yaaroz.view.CustomButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_5"
            android:background="@drawable/bluebox"
            android:drawableLeft="@drawable/list_icon"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_15"
            android:text="List A Room"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_21"
            app:customFont="Roboto-Regular.ttf" />
    </LinearLayout>
</FrameLayout>