<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <rotate
            android:fromDegrees="360"
            android:toDegrees="0">
            <bitmap
                android:src="@drawable/big_round"
                android:tint="@color/colorPrimary" />
        </rotate>
    </item>
    <item
        android:bottom="@dimen/dp_10"
        android:left="@dimen/dp_10"
        android:right="@dimen/dp_10"
        android:top="@dimen/dp_10">
        <rotate
            android:fromDegrees="0"
            android:toDegrees="360">
            <bitmap
                android:src="@drawable/small_round"
                android:tint="@color/colorPrimary" />
        </rotate>
    </item>
    <item
        android:bottom="@dimen/dp_15"
        android:gravity="center"
        android:left="@dimen/dp_15"
        android:right="@dimen/dp_15"
        android:top="@dimen/dp_15">
        <bitmap
            android:src="@drawable/y_text"
            android:tint="@color/colorPrimary" />

    </item>

</layer-list>